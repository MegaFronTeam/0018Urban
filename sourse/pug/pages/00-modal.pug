extends ../layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sForm/_sForm.pug

block variables
	- let  mainPage= null 
	- let  bg= null

block title
	- let  title= 'Модальные окна'
	title= title
block pagecontent
	//- +topLine()
	main
		.section.container-fluid
			h1 Страница для  демонстрации модальных окон
			.row
				mixin btn(id, name)
					.col-auto.mb-2
						a.btn.btn-primary(href=`#` data-src=id data-fancybox="modal")= name
				+btn("contact-request", "Причина запроса контактов")
				+btn("admin-question", "Задать вопрос администратору")
				+btn("submit-idea", "Предложи идею или проект")
				+btn("modal-warning", "Подтверждение")
	+thanx(`Спасибо`, `Ваш вопрос отправлен. Ответ придет вам на&nbsp;указанную почту, время модерации займет 7&nbsp;дней.`)

