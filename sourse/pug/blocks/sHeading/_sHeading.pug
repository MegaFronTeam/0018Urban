mixin sHeading(data)
	// start sHeading
	+b.SECTION.sHeading.section.bg-wrap#sHeading&attributes(attributes)
		+img('img/sHeading-bg.jpg', 'bg').img-bg
		.container(data-aos="fade-up")
			+e.row.row
				.col-auto
					+img('img/svg/heading-logo-1.svg')
				.col-auto
					+img('img/svg/heading-logo-2.svg')
				.col-auto
					+img('img/svg/heading-logo-3.svg')
			+b.section-title
				h1 Программа MPA для директоров и управленческих команд образовательных организаций города Москвы
				
	// end sHeading

mixin sHeadingMPA(data)
	// start sHeading
	+b.SECTION.sHeading--mpa.section.bg-wrap#sHeading&attributes(attributes)
		picture.picture-bg
			source(srcset='img/svg/sHeading-bg-mpa-3.svg' media='(min-width:1280px)')
			img.object-fit-js(src='img/svg/sHeading-bg-mpa.svg' alt='' loading='lazy')
		//- +img('img/svg/sHeading-bg-mpa.svg', 'bg').img-bg
		.container(data-aos="fade-up")
			+e.row.row
				.col-auto
					+img('img/svg/heading-logo-4.svg')
				.col-auto
					+img('img/svg/heading-logo-5.svg')
				.col-auto
					+img('img/svg/heading-logo-6.svg')
			+b.section-title
				h1 &laquo;МТА. Управление в&nbsp;транспортной отрасли&raquo;
				p Станьте лучшим в&nbsp;своей отрасли
	// end sHeading


mixin sHeadingTrainees(data)
	// start sHeading
	+b.SECTION.sHeading--trainees.section.bg-wrap#sHeading&attributes(attributes)
		+img('img/multi-gradient-lg.jpg', 'bg').img-bg
		.container(data-aos="fade-up")
			+e.row.row
				.col-md-6.order-md-last
					picture
						source(srcset='img/header-trainees-bg.png' media='(min-width:576px)')
						img.res-i(src='img/header-trainees-sm-bg.png' alt='' loading='lazy')
				.col-md-6
					+b.section-title
						h1 
							span.text-primary Программа MPA
							| для директоров и&nbsp;управленческих команд образовательных организаций города Москвы
						p 
							span Старт программы 06&nbsp;октября
	// end sHeading