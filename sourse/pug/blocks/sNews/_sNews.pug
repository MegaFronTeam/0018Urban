mixin newsListItem(img, cat, date='26 сентября',title="Встреча с академическим руководителем и студентами", btn)
	.col-sm-6.col-lg-4
		+b.news-preview
			+e.img-wrap
				+img(`img/news-preview-${img}.jpg`)
			+e.details
				+e.category= cat
				+e.date= date
			+e.title-block
				+e.title(href="#")!= title
				if btn
					+e.btn(href="#")&attributes(attributes)= btn

