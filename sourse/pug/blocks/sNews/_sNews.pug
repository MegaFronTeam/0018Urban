mixin newsListItem(img, cat, date='26 сентября',title="Встреча с академическим руководителем и студентами", btn)
	.col-sm-6.col-lg-4
		+b.news-preview(href="#")
			+e.img-wrap
				+img(`img/news-preview-${img}.jpg`)
			+e.details
				+e.category= cat
				+e.date= date
				+e.like
					+icon('like')
					| 14
			+e.title-block
				+e.title!= title
				if btn
					+e.btn&attributes(attributes)= btn
				+e.icon: +img('img/svg/outlook-icon.svg')

mixin newsListItem2(cat, date='26 сентября', title="Выпусники «Urban Лидер»", text="Летунова Александра Петровна, Прохоров Илья Сергеевич, Иванова Ольга НиколаевнаИванова Ольга НиколаевнаИванова Ольга Николаевна", done=true, error, online='Онлайн')
	.col-sm-6.col-lg-4
		+b.news-preview--2(href="#")
			+e.img-wrap
			+e.details
				+e.date= date
				+e.online
					+icon('pin')
					!= online
			+e.title-block
				if done
					+e.done
						//- +img('img/svg/check.svg')
						| Проведено
				if error
					+e.done--cancel
						+img('img/svg/error.svg')
						| Отменено
				+e.title!= title
				+e.text-wrap
					+e.text()!= text
					.tooltip(role="tooltip") Егорова Нина Федоровна, Летунова Александра Петровна, Николаев Анатолий Борисович 
						.arrow(data-popper-arrow)
				+e.category= cat
				+e.icon: +img('img/svg/outlook-icon-2.svg')
