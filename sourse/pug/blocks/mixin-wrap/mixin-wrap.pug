mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти")
			button 
				+icon("search")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin chat
	+b.chat
		+icon('help')

mixin upload-field(text)
	+b.upload-field
		//- +e.title.form-wrap__input-title!=title
		+e.LABEL.wrap
			+e.SPAN.file-name!= text
			+e.SPAN.input-wrap
				+e.btn
					input.input-upload(type='file' name='file' accept=".jpg,.jpeg,.png,.pdf,.webp")
					//- +icon('clip')
					span Выбрать файл


mixin useful-item(type, text, i)
	.col-md-6
		+b.useful-item(href="#")
			+e.content
				+e.head
					block
					//- +label('', 'Факультативные')
					//- +label('', 'Просмотрено')
				+e.body
					.row
						.col
							p!= text
						+e.col.col-auto
							if i
								+e.img-wrap--gradient
									+img(`img/useful-item-${i}.jpg`, 'bg')
							else
								+e.img-wrap
			+e.footer
				.row
					.col
						+e.label(style= "--label-c: #999EAB; --label-bdc: #999EAB;" )
							span!= type
					.col-auto
						+useful-label('calendar', '26 сентября').px-0(style= "--label-c: #999EAB;" )
					.col-auto
						+useful-label('clock', '7 миннут').px-0(style= "--label-c: #999EAB;" )


mixin useful-label(i, t)
	if i
		+e.label--icon&attributes(attributes)
			+icon(i)
			span!= t
	else
		+e.label&attributes(attributes)
			span!= t