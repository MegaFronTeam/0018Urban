mixin forum-item(title,theme,msg,upd,date)
	+e.item
		+e.branch
			+e.img-wrap&attributes(attributes)
				//- +img('img/letter.png')
			+e.theme(href="#")!= title
		+e.counter--theme
			+e.counter-img
				+icon('list2')
			+e.amount!= `${theme} <span>Тем</span>`
		+e.counter--msg
			+e.counter-img
				+icon('msg')
			+e.amount!= `${msg} <span>Сообщения</span>`
		+e.updating
			+e.updating-link(href='#')!= `Обновление: ${upd}`
			+e.updating-date= date

mixin forum-themes(title,descr,msg,date,name)
	+e.themes-item
		+e.branch
			+e.img-wrap&attributes(attributes)
			+e.text
				+e.theme(href="#")!= title
				+e.descr!= descr
		+e.counter--msg
			+e.counter-img
				+icon('msg')
			+e.amount!= `${msg} <span>Ответов</span>`
		+e.updating
			+e.updating-link!= `Обновление: ${date}`
			+e.updating-date= name

