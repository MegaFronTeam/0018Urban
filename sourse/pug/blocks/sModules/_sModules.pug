mixin modulesItem(p, i)
	+e.col.col-md-6.col-lg-4
		+e.item(data-aos="fade-up" data-aos-delay="150")&attributes(attributes)
			if i
				+icon(`${i}`)
			else
				+e.icon
					//- +img('img/svg/switch-check.svg')
			p!= p
			if block
				block

mixin modulesItem2(p, i, t)
	+e.col.col-md-6.col-lg-4
		+e.item(data-aos="fade-up" data-aos-delay="150")&attributes(attributes)
			+icon(`${i}`)
			+e.item-content
				p!= p
				span!= t

