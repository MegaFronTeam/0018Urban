mixin modulesItem(p, i)
	+e.col.col-md-6.col-lg-4
		+e.item(data-aos="fade-up" data-aos-delay="150")
			if i
				+icon('check-rounded')
			else
				+e.icon
					//- +img('img/svg/switch-check.svg')
			p!= p

mixin sModules(data)
	// start sModules
	+b.sModules--progarm.section&attributes(attributes)
		.container-fluid
			+e.wrapper(data-aos="fade-up" data-aos-delay="100" )
				+b.section-title.text-center
					h2 Модули программы
				+e.row.row
					+modulesItem(`Видение и&nbsp;стратегия современного образования.`, `i`)
					+modulesItem(`Управление воспитательным, образовательным процессом и&nbsp;оценка качества.`, `i`)
					+modulesItem(`Управление экономикой и&nbsp;хозяйством образовательной организации.`, `i`)
					+modulesItem(`Современные технологии управления в&nbsp;образовании.`, `i`)
					+modulesItem(`Профессиональное лидерство руководителя.`, `i`)
					+modulesItem(`Управление рисками образовательной организации.`, `i`)
					+modulesItem(`Принятие и&nbsp;реализация управленческих решений.`, `i`)
					+modulesItem(`Эффективные коммуникации руководителя.`, `i`)
					+modulesItem(`Управление публичными коммуникациями и&nbsp;информационными потоками.`, `i`)
					+modulesItem(`Управление клиентоориентированностью в&nbsp;образовании.`, `i`)
					+modulesItem(`Управление человеческими ресурсами в&nbsp;системе руководителя.`, `i`)
	// end sModules

